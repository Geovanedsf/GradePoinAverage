<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.RegisterFragment">


    <EditText
        android:id="@+id/editTextRegisterName"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="116dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:hint="Nome do aluno"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterMatter"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:hint="MatÃ©ria"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterName"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterName" />

    <EditText
        android:id="@+id/editTextNoteOne"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterMatter"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterMatter" />

    <EditText
        android:id="@+id/editTextNoteTwo"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 2"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterMatter"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterMatter" />

    <EditText
        android:id="@+id/editTextNoteThree"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 3"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/editTextNoteOne"
        app:layout_constraintTop_toBottomOf="@+id/editTextNoteOne" />

    <EditText
        android:id="@+id/editTextNoteFour"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 4"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/editTextNoteTwo"
        app:layout_constraintTop_toBottomOf="@+id/editTextNoteTwo" />

    <Button
        android:id="@+id/buttonCalculateRegister"
        android:layout_width="155dp"
        android:layout_height="81dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#7756B1"
        android:text="@string/cadastrar_e_calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterMatter" />

</androidx.constraintlayout.widget.ConstraintLayout>