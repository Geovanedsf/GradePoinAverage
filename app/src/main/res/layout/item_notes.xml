<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="327dp"
                android:layout_height="173dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical"

                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.066"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewNameStudent"
                    android:layout_width="320dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:hint="Nome do Aluno"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewMatterName"
                    android:layout_width="307dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Matéria"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewGrades"
                    android:layout_width="308dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Média da matéria"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonEdit"
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toTopOf="@+id/imageButtonDelete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/container"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButtonDelete"
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toTopOf="@+id/container2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/container"
                app:layout_constraintTop_toBottomOf="@id/imageButtonDelete"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container">

                <TextView
                    android:id="@+id/title_best_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/melhores_colocados_dessa_materia"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_best_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_best_notes"
                    tools:itemCount="4"
                    app:layout_constraintTop_toBottomOf="@id/title_best_notes"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>